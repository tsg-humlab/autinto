{
  "name": "exercise-widget",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bootstrap": "^5.2.3",
    "ramda": "^0.28.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "shx": "^0.3.4",
    "swiper": "^9.2.2"
  },
  "devDependencies": {
    "prettier": "2.8.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "build-widget": "react-scripts build",
    "copy-dependencies": "shx cp ./build/static/js/main.*.js ./book/additional-files/main.js && shx cp ./build/static/css/main.*.css ./book/additional-files/main.css",
		"copy-source-map": "shx cp ./build/static/js/main.*.js.map ./book/build/additional-files/",
    "build-book": "cd book && mdbook build",
    "build": "npm run build-widget && npm run copy-dependencies && npm run build-book && npm run copy-source-map"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 firefox version",
      "last 1 chrome version",
      "last 1 safari version"
    ]
  }
}
